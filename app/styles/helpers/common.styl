// General body styles

.page
	background-color #ffffff
	font-display swap
	font-family $hR
	font-weight normal
	font-size 16px
	line-height 1.5
	color #001d49
	tr(all .3s ease)

img
	display block
	max-width 100%
	height auto

// Container

.in
	margin auto
	padding-right 15px
	padding-left 15px
	min-width 320px
	max-width 1345px
	+r($d)
		max-width 1066px
	+r($tL)
		padding-left 25px
		padding-right 25px
		max-width 800px
	+r($tM)
		padding-left 8px
		padding-right 8px
		max-width 320px

// Buttons

.button
	border 1px solid #f3f3f3
	padding-top 9px
	padding-right 25px
	padding-bottom 10px
	padding-left 25px
	height 40px
	background-color #fff
	color #40527b
	font-size 16px
	text-align center
	border-radius 40px
	text-decoration none
	tr(all .3s ease)
	&:hover
		color darken(#40527b, 10)
		tr(all .3s ease)

// Titles

.title
	position relative
	padding-bottom 12px
	max-width 600px
	font-size 26px
	font-family $hM
	line-height 1.076
	+r($tM)
		padding-bottom 8px
		font-size 20px
		line-height 1.4
	&:after
		position absolute
		top 100%
		left 0
		width 100%
		height 2px
		content ''
		background-color #fbb727

// wysiwyg editor styles

.wysiwyg
	p
		margin-bottom 30px
		font-size 16px
		line-height 1.5
		&:last-child
			margin-bottom 0

	img
		margin-bottom 30px
		max-width 100%
		height auto

.resp-image
	img
		max-width 100%
		height auto
