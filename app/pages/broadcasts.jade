extends /blocks/layout/layout-sub-broadcasts

include /blocks/header/header
include /blocks/main/main
//- include /blocks/breadcrumbs/breadcrumbs
include /blocks/content/content

include /blocks/sidebar/sidebar
include /blocks/category/category

include /blocks/best/best
include /blocks/sidefeed/sidefeed
include /blocks/sidechanels/sidechanels

include /blocks/sidenav/sidenav
include /blocks/poll/poll
include /blocks/related/related

include /blocks/pagination/pagination

include /blocks/footer/footer


block head
	- var pageTitle = 'Piter.tv - Трансляции';

block content
	+header()
	+main()
		.main__in
			//- .main__breadcrumbs
			//- 	+breadcrumbs-cat()
			.main__w
				+content().main__content
					//- +category-broadcasts()
					section.category.main__category
						.main__in
							header.category__header
								h1.category__title.title.title_full Трансляции
								//- a.category__button.button.button_form(href="#") Прислать видео
							.category__text
								p Сайт Piter.TV предлагает всем посетителям последние новости России и мира. Граждане нашей страны, проживающие в любом городе, имеют право знать обо всех важных событиях, которые происходят в государстве, будь то принятие нового закона или выступление звезды мирового уровня. <a class="category__text-more" href="#">Подробнее</a>

						.category__broadcasts
							.main__in
								+broadcasts()

					+pagination().main__pagination

				+sidebar().sidebar__cat.main__sidebar
					+sidenav-videos().sidebar__row.sidenav_wide
					+poll-side-videos().sidebar__row.poll_s-wide
					+best().sidebar__best.sidebar__row
					+sidefeed().sidebar__feed.sidebar__row
					+sidechanels().sidebar__chanels.sidebar__row
					//- +related().sidebar__row.related_wide
	+footer()
