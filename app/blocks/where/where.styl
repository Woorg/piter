.where
	&__top
		margin-bottom 26px
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items center
	&__title
		@extends .title
	&__all-news
		position relative
		padding-right 23px
		font-size 18px
		color #007fc6
		text-decoration none
		tr(all .3s ease)
		&:hover
			color darken(#007fc6, 10)
			tr(all .3s ease)
			.day-pic__all-icon
				fill #fafafa
				stroke darken(#0790D1, 10)
	&__all-icon
		position absolute
		top 50%
		right 0
		width 8px
		height 15px
		fill #fafafa
		stroke #0790D1
		transform translateY(-50%)

	&__body
		box-shadow 0 2px 24px rgba(0, 0, 0, 0.1)
		background-color #ffffff

	// &__days

	&__days-item
		// border-top 1px solid #f3f3f3
		height 240px
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items flex-start
		font-size 0
		line-height 1
	&__day
		position relative
		margin-right 37px
		width 192px
		height 100%
		background-color #f9f9f9
		+r($d)
			width 187px
		+r($tL)
			margin-right 17px
			width ratio-percentage(112,750)
	&__day,
	&__day-list-w
		border-bottom 1px solid #f3f3f3
		display inline-block
		vertical-align top
	&__day-w
		position absolute
		top 50%
		left 50%
		text-align center
		transform translate(-50%, -50%)
	&__day-val
		color #001d49
		font-size 24px
		line-height 1

	&__day-t
		color #6a7381
		font-size 13px
		line-height 1
		text-transform uppercase

	&__day-list-w
		position relative
		overflow hidden
		max-width 808px
		max-width ratio-percentage(1088,1315)
		width 82%
		line-height 0
		+r($d)
			max-width ratio-percentage(808,1033)
			width auto
		+r($tL)
			// width 623px
			max-width ratio-percentage(620,750)

	&__day-controls
		position absolute
		z-index 1
		top 0
		right 0
		left 0

	&__day-button
		position absolute
		z-index 1
		top 0
		cursor pointer

	// &__day-prev
	// 	top 0
	// 	right auto
	// 	left 0
	// 	border none
	// 	width 88px
	// 	height 100%
	// 	background-color transparent
	// 	background-image linear-gradient(270deg, #fff 0%, rgba(255, 255, 255, 0) 100%)


	&__day-next
		right 0
		border none
		width 88px
		height 200px
		background-color transparent
		background-image linear-gradient(270deg, #fff 0%, rgba(255, 255, 255, 0) 100%)
	&__day-button-icon
		position absolute
		top calc(50% - 30px)
		right 27px
		width 16px
		height 30px
		fill transparent
		stroke #fff
		pointer-events none
		transform translateY(-50%)

	&__day-scrollbar
		margin 0 0 1em 0
		height 2px
		// background #ccc
		line-height 0
	&__day-dandle
		width 100px
		height 100%
		// background #292a33
		cursor pointer
	&__day-mousearea
		position absolute
		z-index 2
		top -12px
		left 0
		width 100%
		height 8px
		border-radius 30px
		background-color #f2f2f2
		cursor pointer

	&__day-frame
		// width 808px
		height 205px
		// line-height 215px
		overflow hidden

	&__day-list
		height 100%

	&__day-item
		margin-right 23px
		padding-top 20px
		float left
		width 160px
		height 100%
		cursor pointer
		// &.active
		// 	background red
		&:last-child
			margin-right 0
	&__day-link
		display block
		text-decoration none

	&__day-img
		position relative
		margin-bottom 7px
		width 159px
		height 89px
		border-radius 3px
		img
			respimg()

	&__day-badge
		position absolute
		top 0
		right -5px
		width 54px
		height 18px
		color #fff
		font-size 15px
		text-align center
		line-height 1.4
		border-radius 8px 8px 8px 0
		background-color #ff3055

	&__day-title
		color #001d49
		font-size 15px
		line-height 1.2

	.slick-track
		&:before
			display none

	.slick-slide
		line-height 0
		height 215px


	.slick-current
		.where__day-val
			color #ff3055
		.where__day-t
			color #001d49


	.slick-arrow
		width 24px
		height 24px

	.slick-prev
		display none

	.slick-next
		top auto
		right auto
		left 83px
		bottom 0
		background url('../images/general/arrow-down.svg') 0 0 / cover no-repeat
		+r($tL)
			left 42px

	.slick-next
		&:before
			display none
