.poll
	color #001d49
	&__title
		margin-bottom 30px
		padding-right 72px
		// color #001d49
		font-size 20px
		+r($tL)
			padding-right 24px
		+r($tM)
			margin-bottom 10px
	&__list
		padding-right 72px
		// max-height 215px
		+r($tL)
			padding-right 24px
		+r($tM)
			padding-right 13px
	&__item
		position relative
		margin-bottom 20px
	&__item-w
		max-width 480px
		+r($d)
			max-width 250px
		+r($tM)
			max-width 205px

	&__item-title
		margin-bottom 8px
		font-family $hL
		+r($tM)
			font-size 16px
	&__item-result-w
		width 100%
		height 16px
		border-radius 10px
		background-color #f7f7f7
		+r($tM)
			height 8px

	&__item-result
		height 100%
		background-image linear-gradient(to right, #1e8ccc 0%, #0da4eb 100%)
		border-radius 10px 0 0 10px
	&__item-percent
		position absolute
		right 0
		bottom 0
		font-size 18px
		line-height 1
