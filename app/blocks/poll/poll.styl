.poll
	color #001d49
	&__title
		margin-bottom 30px
		padding-right 72px
		// color #001d49
		font-size 20px
		+r($tL)
			padding-right 24px
		+r($tM)
			margin-bottom 10px
	&__list
		padding-right 72px
		// max-height 215px
		+r($tL)
			padding-right 24px
		+r($tM)
			padding-right 13px
	&__item
		position relative
		margin-bottom 20px
	&__item-w
		max-width 480px
		+r($d)
			max-width 250px
		+r($tM)
			max-width 205px

	&__item-title
		margin-bottom 8px
		font-family $hL
		+r($tM)
			font-size 16px
	&__item-result-w
		width 100%
		height 16px
		border-radius 10px
		background-color #f7f7f7
		+r($tM)
			height 8px

	&__item-result
		height 100%
		background-image linear-gradient(to right, #1e8ccc 0%, #0da4eb 100%)
		border-radius 10px 0 0 10px
	&__item-percent
		position absolute
		right 0
		bottom 0
		font-size 18px
		line-height 1

.poll_side
	padding-top 20px
	padding-left 24px
	padding-right 0
	padding-bottom 20px
	box-shadow 0 2px 24px rgba(0, 0, 0, 0.1)
	+r($d)
		padding-top 0
		padding-left 0
		padding-right 0
		padding-bottom 0
		box-shadow none
	.poll__header
		display none
		+r($d)
			display block
	.poll__title,
	.poll__list
		padding-right 15px
	.poll__title
		margin-bottom 10px
		+r($d)
			margin-bottom 25px
	.poll__item
		padding-right 44px
	.poll__item-w
		max-width 202px
		+r($d)
			max-width 300px
	.poll__item-title
		margin-bottom 13px
		font-size 15px
	.poll__item-result-w
		height 8px
		+r($d)
			height 16px
		+r($tM)
			height 8px
	.poll__item-percent
		bottom -1px

	.poll__w
		display flex
		max-height 400px
		flex-flow row wrap
		justify-content space-between
		+r($tM)
			display block
			max-height 100%
	.poll
		+r($d)
			padding-top 20px
			padding-left 24px
			padding-right 0
			padding-bottom 20px
			width ratio-percentage(412, 680)
			max-height 400px
			box-shadow 0 2px 24px rgba(0, 0, 0, 0.1)
		+r($tM)
			margin-bottom 30px
			width 100%
	.polls__list
		display none
		+r($d)
			padding-right 0
			display block
			width ratio-percentage(240, 680)
		+r($tM)
			width 100%

	.simplebar-scrollbar
		width 8px
		&:before
			border-radius 30px
			background-color #f2f2f2

