.broadcasts
	margin-bottom 40px
	display block
	// &__list

	&__item
		position relative
		border-bottom 1px solid #f3f3f3
		display flex
		flex-flow row wrap
		justify-content flex-start
		text-decoration none
		&:first-child
			border-top 1px solid #f3f3f3

	// &__link
	// 	position absolute
	// 	top 0
	// 	left 0
	// 	right 0
	// 	bottom 0
	&__day-w
		padding-top 30px
		width 130px
		background-color #fafafa
		text-align center
		+r($tM)
			width 80px
	&__day
		margin-bottom 20px
		font-size 16px
		font-family $hL
		text-transform uppercase
		+r($tM)
			font-size 13px
		span
			display block
			color #40527b
			font-size 34px
			font-family $hB
			line-height 1
			+r($tM)
				font-size 24px
	&__time
		position relative
		padding-left 22px
		font-size 14px
		display inline-block
		vertical-align top
		text-align center
		+r($tM)
			padding-left 0
	&__time-icon
		position absolute
		top 50%
		left 0
		width 16px
		height 16px
		fill #a0a7b2
		transform translateY(-50%)
		+r($tM)
			position static
			margin auto
			margin-bottom 8px
			display block
			transform none
	&__content
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items flex-start
		flex 1

	&__image
		margin-top 15px
		margin-right 10px
		margin-left 15px
		max-width 265px
		overflow hidden
		border-radius 3px
		+r($d)
			display none
		img
			respimg()

	&__content-w
		position relative
		padding-top 15px
		padding-right 190px
		padding-bottom 15px
		padding-left 23px
		flex 1
		+r($d)
			padding-right 120px
		+r($tM)
			padding-right 0
	&__item-title
		margin-bottom 12px
		display block
		color #001d49
		font-size 20px
		font-family $hM
		text-decoration none
		&:hover
			text-decoration underline
	&__text
		margin-bottom 10px
		font-size 14px

	&__meta
		position absolute
		top 23px
		right 24px
		text-align center
		font-size 14px
		+r($tM)
			position static
			margin-bottom 10px
			display flex
			flex-flow row wrap
			justify-content flex-start
			align-items center
	&__views
		margin-bottom 5px
		padding-top 4px
		padding-right 4px
		padding-bottom 4px
		padding-left 4px
		min-width 80px
		height 32px
		background-color #0790d1
		color #FFF
		font-size 18px
		text-align center
		border-radius 8px
		+r($tM)
			margin-right 10px
			padding-top 4px
			padding-right 8px
			padding-bottom 4px
			padding-left 8px
			font-size 15px

	&__report
		font-size 14px
		+r($tM)
			font-size 12px
		a
			color #0790d1
			text-decoration none
			&:hover
				text-decoration underline


