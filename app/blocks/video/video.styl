.video
	&__link
		display block
		text-decoration none
	&__img
		position relative
		margin-bottom 8px
		img
			respimg()

	&__video-icon
		position absolute
		top 11px
		right 11px
		width 47px
		height 32px
		fill #fff
	// &__w

	&__meta
		margin-bottom 10px
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items center
		max-width 210px
		font-size 14px

	&__date,
	&__views,
	&__comments
		position relative
		color #a0a7b2

	&__date
		padding-left 20px
	&__views
		padding-left 23px
	&__comments
		padding-left 22px
		+r($tM)
			display none

	&__date-icon,
	&__views-icon,
	&__comments-icon
		position absolute
		top 50%
		left 0
		transform translateY(-50%)
		fill #a0a7b2

	&__date-icon
		width 16px
		height 16px
	&__views-icon
		width 18px
		height 12px
	&__comments-icon
		width 14px
		height 14px

	&__title
		color #001d49
		font-size 18px
		line-height 1.333
		+r($tM)
			font-size 15px
