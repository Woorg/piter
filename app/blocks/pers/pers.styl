.pers
	&__header
		+r($tM)
			margin-bottom 25px
	&__top
		margin-bottom 40px
		display flex
		flex-flow row wrap
		justify-content flex-start
	&__photo
		margin-right 34px
		max-width 192px
		+r($tM)
			margin-right 0
			margin-bottom 17px
			max-width 214px
		img
			respimg()
	&__w
		flex 1 0 auto
	&__short-desc
		margin-bottom 30px
		padding-right 160px
		color #6a7381
		font-size 14px
		+r($tM)
			padding-right 0
	&__info
		border-top 1px solid #f3f3f3
		padding-top 15px
		color #1f2630
		font-size 15px
		+r($tM)
			border-bottom 1px solid #f3f3f3
			padding-bottom 15px
	&__info-item
		margin-bottom 6px
		display flex
		flex-flow row wrap
		&:last-child
			margin-bottom 0
		+r($tM)
			margin-bottom 10px
	&__info-term
		margin-right 22px
		min-width 120px
		font-family $hM
		+r($tM)
			margin-bottom 5px
			width 100%
	// &__info-desc

	&__text
		@extends .wysiwyg-entry-second
		margin-bottom 30px
		color #2e3746
		h2
			color #001d49

		p
			margin-bottom 5px
			&+p:first-letter
				padding-left 25px

	&__mentions
		margin-bottom 50px
