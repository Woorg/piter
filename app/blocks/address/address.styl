.address
	position relative
	color #6a7381
	text-decoration none
	display flex
	flex-flow row wrap
	justify-content flex-start
	&__header
		margin-bottom 20px
		width 100%
		+r($tM)
			margin-bottom 20px

	&__top
		margin-bottom 40px
		display flex
		flex-flow row wrap
		justify-content flex-start
	&__link
		position absolute
		z-index 1
		top 0
		bottom 0
		right 0
		left 0
		width 100%
		height 100%
	&__photo
		position relative
		margin-right 32px
		width 128px
		height 128px
		background #f3f3f3 url('../images/general/address-list-placeholder.png') 50% no-repeat
		border-radius 3px
		background-size cover
		+r($tM)
			position absolute
			top 15px
			right 15px
			margin-right 0
			width 64px
			height 64px
		img
			position relative
			z-index 1
			respimg()

	&__w
		position relative
		padding-right 150px
		flex 1 0 auto
		display flex
		flex-flow column
		font-size 14px
		+r($d)
			padding-right 0

	&__title
		margin-bottom 6px
		color #001d49
		font-size 20px
		font-family $hM
		line-height 1.2
		+r($tM)
			padding-right 70px
			font-size 15px
	&__desc
		@extends .wysiwyg
		margin-bottom 6px
		color #6a7381
		p
			margin-bottom 10px
			// &:last-child
			// 	+r($tM)
			// 		display none

		+r($d)
			margin-bottom 10px
		+r($tM)
			padding-right 70px


	&__category
		position relative
		z-index 2
		margin-bottom 10px
		display inline-block
		vertical-align top
		color inherit
		&:hover
			text-decoration none

	&__address
		margin-top auto
		color #A7ADB5




	&__photo
		margin-right 34px
		max-width 192px
		+r($tM)
			margin-right 0
			margin-bottom 17px
			max-width 214px
		img
			respimg()
	&__w
		flex 1 0 auto
	&__short-desc
		margin-bottom 30px
		padding-right 160px
		color #6a7381
		font-size 14px
		+r($tM)
			padding-right 0
	&__info
		border-top 1px solid #f3f3f3
		padding-top 15px
		color #1f2630
		font-size 15px
		+r($tM)
			border-bottom 1px solid #f3f3f3
			padding-bottom 15px
	&__info-item
		margin-bottom 6px
		display flex
		flex-flow row wrap
		&:last-child
			margin-bottom 0
		+r($tM)
			margin-bottom 10px
	&__info-term
		margin-right 22px
		min-width 120px
		font-family $hM
		+r($tM)
			margin-bottom 5px
			width 100%
	// &__info-desc

	&__text
		@extends .wysiwyg-entry-second
		margin-bottom 30px
		color #2e3746

	&__map-w
		position relative
		margin-bottom 30px
		padding-top 50.5%
		overflow hidden
		+r($tM)
			margin-bottom (30px / 2)
			padding-top 0
			min-height 323px

	&__map
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background #e8e8e8


	&__site
		margin-bottom 10px
		display block
		color inherit
		font-size 14px
		&:hover
			text-decoration none

	&__first,
	&__second
		font-size 14px

	&__first
		margin-bottom 10px
	&__second
		margin-bottom 20px
		color #AAAFB7

	&__contacts
		margin-bottom 40px
		display flex
		flex-flow row wrap
		font-size 15px
		+r($tM)
			margin-bottom (40px / 2)

	&__contacts-item
		margin-bottom 6px
		width 100%
		display flex
		flex-flow row wrap
		justify-content flex-start

	&__contacts-title
		margin-right 22px
		min-width 72px
		color #1f2630
		font-family $hM
	&__contacts-desc
		flex 1 0 auto
		color #1f2630
		a
			color inherit
			text-decoration none
			&:hover
				text-decoration underline





.address_full
	display block
	.address__header
		+r($tM)
			margin-bottom 20px

	.address__title
		margin-bottom 0
		font-size 26px


	.address__text
		@extends .wysiwyg-entry
		p
			margin-bottom 0
