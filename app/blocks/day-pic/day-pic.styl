.day-pic
	&__top
		margin-bottom 26px
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items center
	&__title
		@extends .title
	&__all-news
		position relative
		padding-right 23px
		display none
		font-size 18px
		color #007fc6
		text-decoration none
		tr(all .3s ease)
		+r($d)
			display block
		+r($tL)
			display none
		&:hover
			color darken(#007fc6, 10)
			tr(all .3s ease)
			.day-pic__all-icon
				fill #fafafa
				stroke darken(#0790D1, 10)
	&__all-icon
		position absolute
		top 50%
		right 0
		width 8px
		height 15px
		fill #fafafa
		stroke #0790D1
		transform translateY(-50%)

	&__list-w
		overflow hidden
	&__list
		margin-left -25px
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items flex-start
		+r($tL)
			margin-left -16px
		+r($tM)
			margin-left 0
			// min-height 370px
	&__item
		margin-left 25px
		margin-bottom 37px
		width ratio-percentage(232, 1036)
		+r($tL)
			margin-left 16px
			margin-bottom 27px
			width ratio-percentage(232, 750)
		+r($tM)
			margin-left 0
			margin-bottom 8px
			width 100%
			// min-height 170px
			box-shadow 0 4px 20px rgba(0, 0, 0, 0.1)



	&__item_hidden
		+r($tL)
			display none

	&__item-w
		+r($tM)
			position absolute
			left 0
			right 0
			bottom 0
			display flex
			flex-flow column
			padding-left 15px
			padding-right 15px
			padding-bottom 3px

	&__link
		display block
		color #001d49
		text-decoration none
		+r($tM)
			position relative
			padding-top ratio-percentage(171,304)
		&:hover
			.day-pic__item-title
				color lighten(#001d49, 10)
				tr(all .3s ease)
				+r($tM)
					color darken(#fff, 10)
	&__img
		position relative
		margin-bottom 8px
		border-radius 3px
		overflow hidden
		+r($tM)
			position absolute
			top 0
			right 0
			bottom 0
			left 0
			height 100%
		img
			respimg()

		&:after
			+r($tM)
				position absolute
				top 0
				right 0
				bottom 0
				left 0
				content ''
				background-image linear-gradient(2deg, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.1) 100%)

	&__video-icon
		display none
		+r($tM)
			position absolute
			z-index 1
			top 11px
			right 11px
			display block
			width 47px
			height 32px
			fill #fff
	&__meta
		margin-bottom 7px
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items center
		color #a0a7b2
		font-size 14px
		line-height 1.571
		+r($tM)
			color #d5d3d2

	&__date,
	&__views,
	&__comments
		position relative
	&__date-icon
	&__views-icon,
	&__comments-icon
		position absolute
		top calc(50% - 1px)
		left 0
		transform translateY(-50%)
	&__date
		padding-left 20px
		min-width 114px
		+r($tM)
			padding-left 0
	&__date-icon
		width 16px
		height 16px
		fill #a0a7b2
		+r($tM)
			display none
	&__views
		min-width 62px
		padding-left 24px
	&__views-icon
		width 18px
		height 12px
		fill #a0a7b2
		line-height 1
		+r($tM)
			fill #d5d3d2
	&__comments
		min-width 56px
		padding-left 23px
	&__comments-icon
		top 50%
		width 14px
		height 13px
		fill #a0a7b2
		line-height 1
		+r($tM)
			fill #d5d3d2
	&__item-title
		font-size 18px
		line-height 1.333
		+r($tM)
			margin-bottom 8px
			order -1
			color #FFF
