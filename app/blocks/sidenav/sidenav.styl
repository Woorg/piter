.sidenav
	display block
	&__header
		border-bottom 1px solid #f3f3f3
		padding-bottom 1px
		margin-bottom 24px
	// &__title
	// &__list

	&__item
		margin-bottom 10px
		&:last-child
			margin-bottom 0
	&__link
		position relative
		padding-left 23px
		color #001d49
		text-decoration none
		&:after
			position absolute
			top 50%
			left 0
			content ''
			width 8px
			height 8px
			background-color #fbb727
			border-radius 50%
			transform translateY(-50%)

	&__sub
		margin-left 32px
		padding-top 10px
		padding-bottom 10px

	&__sub-item
		margin-bottom 5px
		&:last-child
			margin-bottom 0

	&__sub-item_active
		.sidenav__sub-link
			color #001d49
			font-family $hR
	&__sub-link
		color #6a7381
		font-family $hL
		font-size 15px
		text-decoration none
