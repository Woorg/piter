.comments
	display block
	&__header
		border-bottom 1px solid #f3f3f3
		padding-bottom 1px
		margin-bottom 24px

	&__list
		padding-top 13px
	&__item
		border-top 1px solid #f3f3f3
		border-bottom 1px solid #f3f3f3
		padding-top 14px
		padding-bottom 14px
		font-size 14px
	&__item-top
		padding-bottom 14px
		display flex
		flex-flow row wrap
		justify-content flex-start

	&__user
		// margin-right 16px
		margin-right ratio-percentage(16, 640)
	&__image
		margin-bottom 14px
		display block
		overflow hidden
		border-radius 3px
		img
			respimg()
	&__rating
		display flex
		flex-flow row nowrap
		justify-content space-between
		align-items center
		color #1f2630
		font-size 15px
	&__rating-button
		position relative
		width 20px
		height 18px
		text-decoration none
		text-indent -9999px
		text-decoration none
		&:after
			position absolute
			top 50%
			left 0
			content ''
		&:hover
			opacity .8

	&__rating-plus
		retinaSprite($comm_plus_group)
	&__rating-minus
		retinaSprite($comm_minus_group)
	&__rating-num
		margin-left 6px
		margin-right 6px

	&__w
		width 538px
		width ratio-percentage(526, 640)
		+r($tM)
			width ratio-percentage(210, 288)
	&__top
		margin-bottom 10px
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items flex-start

	&__name,
	&__reply
		color #0790d1
		font-size 15px
		text-decoration none
		&:hover
			text-decoration underline
	&__name
		margin-right 12px
		min-width 55px
	&__date
		color #a0a7b2
	&__text
		margin-bottom 10px
		color #6a7381


	&__reply
		margin-top 10px

	&__form_hidden
		display none
