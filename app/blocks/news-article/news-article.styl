	padding-top 0
	float none
	width 100%
	box-shadow none
	.news-article__link
		position static
	.news-article__image
		margin-right 14px
		width 192px
		width ratio-percentage(110,288)
		max-height 66px
		+r($tL)
			width ratio-percentage(110,368)
		+r($tM)
			max-height 100%
			width ratio-percentage(110,288)

		&:after
			display none
	.news-article__video-icon
		top 5px
		right 5px
		width 33px
		height 22px
	.news-article__w
		position static
		padding-top 0
		padding-left 0
		padding-right 0
		padding-bottom 0
		width 752px
		width ratio-percentage(160,288)
		+r($tL)
			width ratio-percentage(240,368)
		+r($tM)
			width ratio-percentage(154,288)
	.news-article__title
		margin-bottom 8px
		color #001d49
		font-size 16px
		line-height 1.25
		+r($tL)
			font-size 18px
	.news-article__text
		margin-bottom 15px
		color #6a7381
	.news-article__meta
		color #a0a7b2
	.news-article__date
		padding-left 0
	.news-article__views
		margin-right 0
	.news-article__date-icon,
	.news-article__views-icon,
	.news-article__comments-icon
		fill #a0a7b2

	.news-article__category
		margin-top 3px
		display none
		font-size 14px
		color #a0a7b2
		+r($d)
			display block
		+r($tM)
			display block
