.districts
	padding-bottom 30px
	width 100%
	+r($tM)
		padding-bottom 0
	// .main__in
	// 	margin auto
	// 	padding-right 15px
	// 	padding-left 15px
	// 	min-width 320px
	// 	max-width 1345px
	&__header
		+r($tM)
			margin-bottom 30px
	&__title
		+r($tM)
			font-size 20px
	&__all-news
		+r($tL)
			display block
		+r($tM)
			display none
	&__list-w
		+r($tM)
			position relative
			z-index 2
			margin-bottom 30px
			padding-left 12px
			padding-right 12px
			width 288px
			height 40px
			border-radius 3px
			cursor pointer
			border 1px solid #f3f3f3
			&:after,
			&:before
				position absolute
				content ''

			&:before
				top 10px
				left 12px
				content attr(data-district-choose)
				font-size 14px
				color #6a7381
			&:after
				top 12px
				right 12px
				width 18px
				height 18px
				background url('../images/general/arrow-down.svg') 0 0 no-repeat
				background-size cover


			.districts__list
				display none

			&:focus,
			&:hover
				.districts__list
					position absolute
					top calc(100% + 1px)
					left 0
					right 0
					display block
					padding-top 12px
					padding-right 12px
					padding-bottom 12px
					padding-left 12px
					max-height 200px
					overflow auto
	&__list
		margin-bottom 20px
		max-width 1040px
		display flex
		flex-flow row wrap
		justify-content flex-start
		background #fff
	&__item
		margin-right 20px
		margin-bottom 12px
		font-size 15px
		+r($tM)
			margin-right 0
			margin-bottom 0
		&:last-child
			margin-right 0
	&__item_active
		.districts__link
			padding-top 8px
			padding-right 8px
			padding-bottom 8px
			padding-left 8px
			background-color #ebedf1
			border-radius 8px
			+r($tM)
				// padding 0
				background-color transparent
	&__link
		color #40527b
		text-decoration none
		+r($tM)
			display block
			padding-top 8px
			padding-right 8px
			padding-bottom 8px
			padding-left 8px
	&__desc
		margin-bottom 57px
		display flex
		flex-flow row wrap
		justify-content flex-start
		+r($tM)
			margin-bottom 40px
	&__img
		margin-right 35px
		+r($tM)
			order 1
	&__text
		@extends .wysiwyg
		max-width 975px
		flex 1 0 0
		color #6a7381
		+r($tM)
			margin-bottom 30px
	&__map-w
		.main__in
			+r($tM)
				padding-left 0
				padding-right 0
				max-width 100%
	&__map-object
		position relative
		margin-bottom 57px
		padding-top ratio-percentage(518, 1315)
		overflow hidden
		+r($d)
			padding-top ratio-percentage(518, 1036)
		+r($tL)
			padding-top ratio-percentage(344, 800)
		+r($tM)
			margin-bottom 20px
			padding-top 237px

	&__map
		position absolute
		top 0
		left 0
		width 100%
		height 100%

	&__map-list
		position absolute
		z-index 1
		top 16px
		right 16px
		padding-top 25px
		padding-left 25px
		padding-right 25px
		padding-bottom 25px
		min-width 244px
		max-height 430px
		background-color #ffffff
		border-radius 6px
		+r($tL)
			display none

	&__map-item
		margin-bottom 13px
		display flex
		flex-flow row
		justify-content flex-start
		font-size 14px
		white-space nowrap
		text-overflow ellipsis
		overflow hidden
		&:last-child
			margin-bottom 0
		img
			margin-right 15px
			display inline
	&__map-link
		color #6a7381
		text-decoration none


