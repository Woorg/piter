.search-form
	display block
	&__w
		position relative
	&__input
		border none
		padding-left 13px
		padding-right 37px
		width 100%
		height 40px
		color #808BA3
		font-family $hR
		font-size 16px
		border-radius 3px
		background-color #20335d
		+placeholder()
			color #808BA3
		+r($tM)
			padding-left 10px
			padding-right 25px
			height 32px
			background-color transparent
			text-indent -9999px

	&__submit
		position absolute
		top 0
		right 0
		width 37px
		height 40px
		border none
		background transparent
		+r($tM)
			top 5px
			width 24px
			height 24px

	&__submit-icon
		width 17px
		height 16px
		fill #808ba3
		+r($tM)
			width 19px
			height 19px
			fill #fff

