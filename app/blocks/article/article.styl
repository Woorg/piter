.article
	&__image
		margin-bottom 13px
		width 100%
		max-height 354px
		img
			respimg()
	&__title
		margin-bottom auto
		display block
		color #001d49
		font-size 22px
		line-height 1.136
		text-decoration none
		+r($d)
			margin-bottom 10px
			color #fff
			font-size 20px
			line-height 1.2
		+r($tL)
			margin-bottom 10px
			color #FFF
			font-size 20px
			line-height 1.2
	&__meta
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items center
		color #a0a7b2
		font-size 14px
		line-height 1.571
		+r($d)
			color #d4d5d6
	&__date
		margin-right 14px
		padding-left 28px
		+r($tL)
			margin-right 8px
			padding-left 22px
			max-width 110px
		+r($tM)
			margin-right 20px

	&__date,
	&__views,
	&__comments
		position relative
	&__date-icon,
	&__views-icon,
	&__comments-icon
		position absolute
		top calc(50% - 1px)
		left 0
		transform translateY(-50%)

	&__date-icon
		width 16px
		height 16px
		fill #d4d5d6
		+r($tM)
			fill #d4d5d2
	&__views
		margin-right 20px
		padding-left 24px
		+r($tL)
			margin-right 10px
		+r($tM)
			margin-right 20px
	&__views-icon
		width 18px
		height 12px
		fill #a0a7b2

		line-height 1
		+r($d)
			fill #d4d5d6
		+r($tM)
			fill #d4d5d2
	&__comments
		padding-left 23px
	&__comments-icon
		width 14px
		height 13px
		fill #a0a7b2
		line-height 1
		+r($d)
			fill #d4d5d6
		+r($tM)
			fill #d4d5d2
