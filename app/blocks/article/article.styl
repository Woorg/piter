.article
	&__image
		margin-bottom 13px
		width 100%
		// max-height 354px
		img
			respimg()
	&__title
		margin-bottom auto
		display block
		color #001d49
		font-size 22px
		line-height 1.136
		text-decoration none
		+r($d)
			margin-bottom 10px
			// color #fff
			font-size 20px
			line-height 1.2
		+r($tL)
			margin-bottom 10px
			// color #FFF
			font-size 20px
			line-height 1.2
	&__meta
		margin-bottom 20px
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items center
		color #a0a7b2
		font-size 14px
		line-height 1.571
		+r($d)
			color #d4d5d6
		+r($tM)
			color #A0A7B2
	&__date
		margin-right 14px
		padding-left 28px
		+r($tL)
			margin-right 8px
			padding-left 22px
			max-width 110px
		+r($tM)
			margin-right 20px

	&__date,
	&__views,
	&__comments
		position relative
	&__date-icon,
	&__views-icon,
	&__comments-icon
		position absolute
		top calc(50% - 1px)
		left 0
		transform translateY(-50%)
		+r($tM)
			fill #A0A7B2

	&__date-icon
		width 16px
		height 16px
		fill #d4d5d6
		+r($tM)
			fill #d4d5d2
	&__views
		margin-right 20px
		padding-left 24px
		+r($tL)
			margin-right 10px
		+r($tM)
			margin-right 20px
	&__views-icon
		width 18px
		height 12px
		fill #a0a7b2

		line-height 1
		+r($d)
			fill #d4d5d6
		+r($tM)
			fill #A0A7B2

	&__author
		color #A0A7B2
		text-decoration none

	&__header
		margin-bottom 30px
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items center
	&__title
		max-width ratio-percentage(500,640)
		font-size 26px
		font-family $hM
		line-height 1.076
		+r($tM)
			max-width 100%
	&__rating
		position relative
		margin-top 16px
		display flex
		flex-flow row nowrap
		justify-content space-between
		align-items center
		min-width 128px
		font-size 12px
		font-family $hL
	&__rating-button
		position relative
		padding-top 12px
		min-width 64px
		height 40px
		color #6a7381
		text-decoration none
		text-align center
		white-space nowrap
		&:after
			position absolute
			top 0
			left 0
			right 0
			content ''
			width 64px
			height 8px
	&__rating-plus
		&:after
			border-radius 4px 0 0 4px
			background-color #79de77
	&__rating-minus
		&:after
			background-color #ff3055
			border-radius 0 4px 4px 0
	&__rating-icon
		position relative
		top 50%
		margin-right 6px
		width 18px
		height 18px
		fill #929292
		transform translateY(-50%)

	&__social
		margin-bottom 30px
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items center

	&__entry
		@extends .wysiwyg-entry
		padding-bottom 30px


	&__entry-author,
	&__by
		margin-bottom 30px

	&__bottom
		border-top 1px solid #f3f3f3
		margin-bottom 50px
		padding-top 12px
		color #6a7381
		font-size 14px
		line-height 1.714
	&__bottom-row
		margin-bottom 10px

	&__tags
		color inherit
		text-decoration none
		&:hover
			text-decoration underline

	// &__comments


